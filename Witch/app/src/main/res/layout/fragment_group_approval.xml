<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.group.GroupApprovalFragment"
    android:background="@drawable/entry">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="@color/witch_black"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/box_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appointment_approval_fg_tv_group_name"
            style="@style/pt_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="D211"
            android:textColor="@color/witch_white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appointment_approval_fg_cl_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_approval_fg_tv_group_name">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView17"
                style="@style/pt_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임장 "
                android:textColor="@color/witch_white"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appointment_approval_fg_tv_group_leader"
                style="@style/pt_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남수정"
                android:textSize="13sp"
                android:textColor="@color/witch_green"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                style="@style/pt_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님이 요청을 수락하면"
                android:textSize="13sp"
                android:textColor="@color/witch_white"
                app:layout_constraintStart_toEndOf="@+id/appointment_approval_fg_tv_group_leader"
                app:layout_constraintTop_toTopOf="@+id/appointment_approval_fg_tv_group_leader" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appointment_approval_fg_cl_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_approval_fg_cl_line_1">

            <TextView
                android:id="@+id/appointment_approval_fg_tv_group_ex_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D211"
                android:textColor="@color/witch_green"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/pt_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 모임에"
                android:textColor="@color/witch_white"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/appointment_approval_fg_tv_group_ex_name"
                app:layout_constraintTop_toTopOf="@+id/appointment_approval_fg_tv_group_ex_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView18"
            style="@style/pt_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입이 완료됩니다."
            android:textColor="@color/witch_white"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_approval_fg_cl_line_2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            style="@style/pt_semibold"
            android:backgroundTint="@color/witch_green"
            android:text="참여 요청하기"
            android:textSize="13sp"
            android:textColor="@color/witch_black"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>